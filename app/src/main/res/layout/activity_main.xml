<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tamal.sensor.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/b6"
                    android:text="WHICH SENSORS I HAVE??"
                    android:layout_marginTop="10dp"
                    android:onClick="which"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/b1"
                    android:text="ACCELEROMETER"
                    android:layout_marginTop="10dp"
                    android:onClick="accelerometer"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/b2"
                    android:text="PROXIMITY"
                    android:layout_marginTop="10dp"
                    android:onClick="proxy"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/b3"
                    android:text="LIGHT"
                    android:layout_marginTop="10dp"
                    android:onClick="light"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/b4"
                    android:text="LINE GRAPH"
                    android:layout_marginTop="10dp"
                    android:onClick="linegraph"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/b5"
                    android:text="MEDIA PLAYER"
                    android:layout_marginTop="10dp"
                    android:onClick="media"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/b7"
                    android:text="GPS LOCATION TRACKER"
                    android:layout_marginTop="10dp"
                    android:onClick="gpstrack"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/b8"
                    android:text="MORE SENSORS"
                    android:layout_marginTop="10dp"
                    android:onClick="moresensors"/>


        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
